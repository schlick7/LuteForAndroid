<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lute_background"
    android:padding="16dp"
    tools:context=".ui.stats.StatsFragment">

    <!-- Error message view -->
    <TextView
        android:id="@+id/error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Stats content view -->
    <ScrollView
        android:id="@+id/stats_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Stats summary title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Words Read"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Language stats container -->
            <LinearLayout
                android:id="@+id/language_stats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <!-- Language stats will be added here dynamically -->
                
            </LinearLayout>

            <!-- Tab layout for graph periods -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_week"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_background_left"
                    android:padding="12dp"
                    android:text="Week"
                    android:textAlignment="center"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="14sp" />

                <!--
                <TextView
                    android:id="@+id/tab_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_background_middle"
                    android:padding="12dp"
                    android:text="Month"
                    android:textAlignment="center"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tab_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_background_middle"
                    android:padding="12dp"
                    android:text="Year"
                    android:textAlignment="center"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="14sp" />
                -->

                <TextView
                    android:id="@+id/tab_all_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_background_right"
                    android:padding="12dp"
                    android:text="All Time"
                    android:textAlignment="center"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Graph title -->
            <TextView
                android:id="@+id/words_read_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Words Read Each Day"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Line chart for daily words read -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp" />
                
            <!-- Cumulative graph title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cumulative Words Read"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/cumulative_words_read_title" />

            <!-- Line chart for cumulative words read -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/cumulative_line_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>