<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lute_background"
    android:scrollbars="none"
    tools:context=".ui.settings.AppSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/lute_on_background"
            android:layout_marginBottom="16dp" />

        <!-- Server Configuration Section -->
        <com.example.luteforandroidv2.ui.settings.CollapsibleSectionView
            android:id="@+id/server_config_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Header Display Settings Section -->
        <com.example.luteforandroidv2.ui.settings.CollapsibleSectionView
            android:id="@+id/header_display_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Theme Settings Section -->
        <com.example.luteforandroidv2.ui.settings.CollapsibleSectionView
            android:id="@+id/theme_settings_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Default Views Settings Section -->
        <com.example.luteforandroidv2.ui.settings.CollapsibleSectionView
            android:id="@+id/default_views_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- AI Settings Section -->
        <com.example.luteforandroidv2.ui.settings.CollapsibleSectionView
            android:id="@+id/ai_settings_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TTS Settings Section -->
        <com.example.luteforandroidv2.ui.settings.CollapsibleSectionView
            android:id="@+id/tts_settings_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
