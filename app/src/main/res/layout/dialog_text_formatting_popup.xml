<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/text_format_popup_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnIncreaseTextSize"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/text_format_button_background"
            android:src="@drawable/font_increase"
            android:contentDescription="Increase Text Size" />

        <ImageButton
            android:id="@+id/btnDecreaseTextSize"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/text_format_button_background"
            android:src="@drawable/font_decrease"
            android:contentDescription="Decrease Text Size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnIncreaseLineSpacing"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/text_format_button_background"
            android:src="@drawable/line_spacing_increase"
            android:contentDescription="Increase Line Spacing" />

        <ImageButton
            android:id="@+id/btnDecreaseLineSpacing"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="@drawable/text_format_button_background"
            android:src="@drawable/line_spacing_decrease"
            android:contentDescription="Decrease Line Spacing" />

    </LinearLayout>

</LinearLayout>
