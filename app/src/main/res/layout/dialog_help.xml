<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/lute_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lute Reader Help"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/lute_on_background"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Reader Actions:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Tap on a word to view its definition"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Double-tap on a word to open term editor"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Long-press on a sentence to translate it"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Next button marks page as read and turns the page"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• All Known button marks all unknown terms as known and turns the page"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Adjust text formatting via the reader options menu"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Toggle fullscreen mode to hide UI elements"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Use the audio player when available to follow along"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Term Form:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Term status controls (Unknown, Learning 1-5, Known)"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Press + to open text field to add parent terms"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Tap parent term to show translation"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Double-tap parent term to open parent edit form"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Long-press parent term to delete it"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Press the search icon to open the dictionary popup"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dictionary Popup Controls:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Copy to Term button adds highlighted word to translation"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Navigate between multiple dictionaries by swiping or tabs"
                android:textSize="16sp"
                android:textColor="@color/lute_on_background"
                android:paddingBottom="4dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_close_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Close" />

</LinearLayout>
